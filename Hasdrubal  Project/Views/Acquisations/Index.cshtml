                @Html.DisplayNameFor(model => model.MoyenAcq)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreuveAchat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificatAuthentication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oeuvre)
            </th>
            <th></th>
        </tr>
