        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropriétaireActuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAcq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LieuAcq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoyenAcq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreuveAchat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertificatAuthentication)
            </td>
